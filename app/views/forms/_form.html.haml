= form_for @form, html: { class: 'form-horizontal'} do |f|
  = f.hidden_field :form_type_id, value: 1
  .field.control-group
    = f.label :name, {class: 'control-label'}
    .controls
      = f.text_field :name, class: 'span5'
  .field.control-group
    = f.label :description, class: 'control-label'
    .controls
      = f.text_area :description, class: 'span5'
  .field.control-group
    .controls
      .btn-group
        = f.submit t('save'), { class: 'btn btn-small' }
        = link_to t('cancel'), forms_path, { class: 'btn btn-small' }
