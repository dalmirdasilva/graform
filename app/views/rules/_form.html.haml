= form_for @rule, url: form_question_rule_path(@form, @question, @rule), html: { class: 'form-horizontal'} do |f|

  .field.control-group
    = f.label :next_question_id, class: 'control-label'
    .controls
      = f.number_field :next_question_id, class: 'span5'
      
  .field.control-group
    = f.label :option_id, class: 'control-label'
    .controls
      = f.number_field :option_id, class: 'span5'
      
  .field.control-group
    .controls
      .btn-group
        = f.submit 'Save', { class: 'btn btn-small' }
        = link_to 'Cancel', form_question_rules_path(@form, @question), { class: 'btn btn-small' }
