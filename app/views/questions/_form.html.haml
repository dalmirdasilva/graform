= form_for @question, url: form_questions_url(@form), html: { class: 'form-horizontal'} do |f|
  .field.control-group
    = f.label :type, {class: 'control-label'}
    .controls
      = f.number_field :type, class: 'span5'
  .field.control-group
    = f.label :statement, class: 'control-label'
    .controls
      = f.text_area :statement, class: 'span9'
  .field.control-group
    .controls
      .btn-group
        = f.submit 'Save', { class: 'btn btn-small' }
        = link_to 'Cancel', form_questions_url, { class: 'btn btn-small' }
