= form_for @question, url: form_question_url(@form, @question), html: { class: 'form-horizontal'} do |f|
  .field.control-group
    %label.control-label Form
    .controls
      %input.span5{ type: :text, disabled: true, value: @form.name }
  .field.control-group
    = f.label :question_type_id, {class: 'control-label'}
    .controls
      = f.number_field :question_type_id, { class: 'span5' }
  .field.control-group
    = f.label :statement, class: 'control-label'
    .controls
      = f.text_area :statement, class: 'span9'
  .field.control-group
    .controls
      .btn-group
        = f.submit 'Save', { class: 'btn btn-small' }
        = link_to 'Cancel', form_questions_url(@form), { class: 'btn btn-small' }
