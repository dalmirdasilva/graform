= form_for @option, url: form_question_option_path(@form, @question, @option), html: { class: 'form-horizontal'} do |f|
  .field.control-group
    = f.label :text, {class: 'control-label'}
    .controls
      = f.text_field :text, class: 'span5'
  .field.control-group
    .controls
      .btn-group
        = f.submit 'Save', { class: 'btn btn-small' }
        = link_to 'Cancel', form_question_options_path(@form, @question), { class: 'btn btn-small' }
